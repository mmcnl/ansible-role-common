# -*- mode: conf -*-
# {{ ansible_managed }}

# https://www.mmonit.com/wiki/Monit/ConfigurationExamples#system
check system $HOST
  if memory usage > {{ monit_memory_usage_max }}% for {{ monit_system_alert_cycles }} cycles then exec "/bin/bash -c '/usr/bin/top -n 1 -b -o %MEM | head -n40 >> /var/log/monit.log'"
  # FIXME: update to loadavg per core when monit 5.26 available
  if cpu usage > {{ monit_cpu_usage_max }}% for {{ monit_system_alert_cycles }} cycles then exec "/bin/bash -c '/usr/bin/top -n 1 -b -o %CPU | head -n40 >> /var/log/monit.log'"
